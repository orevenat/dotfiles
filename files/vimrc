    " { Plugin configuration
	let mapleader = "\<Space>"

        " { Alchemist (Elixir)
            let g:alchemist_iex_term_size = 15
            let g:alchemist_iex_term_split = 'split'
            let g:alchemist_tag_disable = 1
            let g:elixir_autobuild = 1
            let g:elixir_docpreview = 1
